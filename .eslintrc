{
	"parserOptions": {
		"ecmaVersion": 2021,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		},
		"project": "./tsconfig.json"
	},
	"rules": {
		"import/prefer-default-export": 0,
		"react/jsx-props-no-spreading": 0,
		"jsx-a11y/label-has-associated-control": [
			"error",
			{
				"required": {
					"some": ["nesting", "id"]
				}
			}
		],
		"jsx-a11y/label-has-for": [
			"error",
			{
				"required": {
					"some": ["nesting", "id"]
				}
			}
		]
	},
	"extends": ["airbnb-typescript", "eslint-config-prettier"]
}
